{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ESNext"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@constants": ["./src/constants"],
      "@constants/*": ["./src/constants/*"],
      "@tests": ["./src/tests"],
      "@tests/*": ["./src/tests/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
